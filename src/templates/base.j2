{%- from "macros/routes.j2" import "url_for" -%}
{%- from "macros/sprite.j2" import "icon" -%}
<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ site_name }}</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/style.min.css') }}">
  <link rel="manifest" href="/site.webmanifest">
  <meta name="description" content="{{ meta_desctiption }}">
  {%- if debug and page %}
    <style>
      html {
        background-repeat: no-repeat;
        background-position:  50% 0;
        background-image: url("static/pp/{{ page }}-mobile.jpg");
      }
      @media (min-width: {{media.tablet}}px) { html { background-image: url("static/pp/{{ page }}-tablet.jpg"); } }
      @media (min-width: {{media.desktop}}px) { html { background-image: url("static/pp/{{ page }}-desktop.jpg"); } }
      * { outline: 1px solid rgba(255,100,0,.2); }
    </style>
    <link href="{{ url_for('static', filename='pp/styles.css') }}" rel="stylesheet">
    <script src="{{ url_for('static', filename='pp/script.js') }}"></script>
  {%- endif %}
</head>
<body>
  {%- include "blocks/header.j2" %}
  <main class="main">
    <div class="main__wrap">
      {%- block content %}{% endblock content %}
    </div>
  </main>
  {% include "blocks/footer.j2" %}
  <script src="{{ url_for('static', filename='js/script.min.js') }}"></script>
</body>
</html>
